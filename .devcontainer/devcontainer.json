{
    "name": "tindalwic",
    "runArgs": [
        "--name=tindalwic-devcontainer-vscode"
    ],
    "build": {
        "dockerfile": "Dockerfile"
    },
    "containerEnv": {
        "TINDALWIC_CID": "${devcontainerId}",
        "TINDALWIC_ROOT": "${containerWorkspaceFolder}",
        "PYTHONPYCACHEPREFIX": "/home/node/tindalwic.pycache",
        "UV_DEV": "true",
        "UV_PROJECT": "${containerWorkspaceFolder}/python",
        "UV_PROJECT_ENVIRONMENT": "/home/node/tindalwic.venv"
    },
    "onCreateCommand": {
        "id": "echo '${devcontainerId}' >/tmp/.devcontainerId",
        "uv": "test -e /home/node/tindalwic.venv || uv sync"
    },
    "postCreateCommand": {
        "rs": "test -e /home/node/.cargo || rustup-init -y"
    },
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "editorconfig.editorconfig",
                "ms-python.python",
                "redhat.vscode-yaml",
                "rust-lang.rust-analyzer",
                "streetsidesoftware.code-spell-checker",
                "vadimcn.vscode-lldb"
            ],
            "settings": {
                "python": {
                    "defaultInterpreterPath": "/home/node/tindalwic.venv/bin/python",
                    "editor.defaultFormatter": "charliermarsh.ruff",
                    "lldb.cargo": "/home/node/.cargo/bin/cargo"
                },
                "yaml.schemas": {}
            }
        }
    }
}
