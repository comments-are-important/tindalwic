{
    "name": "alacs",
    "workspaceFolder": "/workspaces/alacs",
    "dockerComposeFile": "docker-compose.yaml",
    "service": "code",
    "customizations": {
        "vscode": {
            "extensions": [
                "charliermarsh.ruff",
                "editorconfig.editorconfig",
                "ms-python.python",
                "ms-vscode.makefile-tools",
                "redhat.vscode-yaml",
                "streetsidesoftware.code-spell-checker",
                "tamasfe.even-better-toml",
                "anthropic.claude-code"
            ],
            "settings": {
                "[python]": {
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "yaml.schemas": {
                    "/opt/workdir/linkml-meta.schema.json": "**/*.linkml.yaml",
                    "./linkml-tutorial/personinfo.schema.json": "**/*.personinfo.yaml"
                }
            }
        }
    }
}
